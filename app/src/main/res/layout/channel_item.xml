<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/apollo_home_channel_item_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apollo_home_channel_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="#333"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/apollo_home_channel_item_tag_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <!--<com.example.zhuzijian.mytest.FlowLayout-->
        <!--android:id="@+id/apollo_home_channel_item_desc"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="2dp"></com.example.zhuzijian.mytest.FlowLayout>-->

        <TextView
            android:id="@+id/apollo_home_channel_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#999"
            android:textSize="12sp" />
    </LinearLayout>

</merge>